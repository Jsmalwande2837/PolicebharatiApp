<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relTop"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:id="@+id/relHamburger"
        android:layout_width="45dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtHamburger"
            android:layout_width="@dimen/height_28"
            android:layout_height="@dimen/height_28"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_15"
            android:background="@drawable/menu" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height_10"
        android:layout_marginTop="@dimen/height_10"
        android:layout_toRightOf="@+id/relHamburger"
        android:singleLine="true"
        android:text="PoliceBharati"
        android:textColor="@android:color/white"
        android:textSize="26dp" />

    <TextView
        android:layout_width="@dimen/height_25"
        android:layout_height="@dimen/height_25"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/height_20"
        android:background="@drawable/search"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="26dp" />
</RelativeLayout>
