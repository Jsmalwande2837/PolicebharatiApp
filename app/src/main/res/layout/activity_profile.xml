<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reset_bg_top">


    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/custom_toolbar">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_above="@+id/llmain"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/height_25"
            android:background="@drawable/edit_button_border"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/height_10">

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_22"
                    android:layout_height="@dimen/height_22"
                    android:layout_above="@+id/mogo_layout"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user_black" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorfaintblack"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="5dp"
                android:background="#000" />

            <LinearLayout
                android:id="@+id/layout_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/username_icon"
                    android:layout_width="@dimen/height_22"
                    android:layout_height="@dimen/height_22"
                    android:layout_above="@+id/mogo_layout"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/phone_receiver" />


                <EditText
                    android:id="@+id/edtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="MobileNo"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorfaintblack"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="5dp"
                android:background="#000" />

            <LinearLayout
                android:id="@+id/layout_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_22"
                    android:layout_height="@dimen/height_22"
                    android:layout_above="@+id/mogo_layout"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/buildings" />


                <EditText
                    android:id="@+id/edtCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="City"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorfaintblack"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="5dp"
                android:background="#000" />

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_22"
                    android:layout_height="@dimen/height_22"
                    android:layout_above="@+id/mogo_layout"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/home" />


                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="Address"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorfaintblack"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="5dp"
                android:background="#000" />

            <LinearLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_22"
                    android:layout_height="@dimen/height_22"
                    android:layout_above="@+id/mogo_layout"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/lockie" />


                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword|textCapSentences"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/colorfaintblack"
                    android:textCursorDrawable="@null" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/height_25"
                android:layout_marginRight="@dimen/height_25"
                android:layout_marginTop="5dp"
                android:background="#000" />


        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/llBottom"
        layout="@layout/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_55"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_2"
        android:layout_marginLeft="@dimen/height_2"
        android:layout_marginRight="@dimen/height_2" />
</RelativeLayout>