            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_4"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgAbout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/homepage"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/imgAbouts"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/homepage_blue"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txtAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relAbout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_5"
            android:text="about"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/height_11" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/relContact"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_4"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgContact"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/homepage"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/imgContacts"
                android:layout_width="20dp"
