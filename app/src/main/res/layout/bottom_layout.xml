<LinearLayout android:id="@+id/llBottom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/relativeHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/relHome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_4"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/homepage"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/imgHomes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/homepage_blue"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txtHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relHome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_5"
            android:text="Home"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/height_11" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

