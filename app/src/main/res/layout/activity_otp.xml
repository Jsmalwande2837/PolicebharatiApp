<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGradient"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/top_layout"
        android:id="@+id/relTop"
        android:layout_height="@dimen/height_80"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/height_20"
        android:layout_marginRight="@dimen/height_20">


        <android.support.v7.widget.CardView
            android:id="@+id/cardRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/height_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/height_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Enter the code received"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/height_23"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llayout_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="@dimen/height_20"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <EditText
                        android:id="@+id/edtOtp1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/border_for_forgot_password_bottom_lineview"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/height_25"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtOtp2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/border_for_forgot_password_bottom_lineview"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/height_25"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtOtp3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/border_for_forgot_password_bottom_lineview"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/height_25"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtOtp4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/height_2"
                        android:layout_weight="1"
                        android:background="@drawable/border_for_forgot_password_bottom_lineview"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/height_25"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="35dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/BtnCancel"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/height_10"
                        android:layout_marginRight="@dimen/height_5"
                        android:layout_weight="0.5"
                        android:background="@android:color/white"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/BtnConfirm"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/height_5"
                        android:layout_marginRight="@dimen/height_10"
                        android:layout_weight="0.5"
                        android:background="@color/colorYellow"
                        android:text="CONFIRm"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <include layout="@layout/bottom_layout"
        android:id="@+id/llBottom"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/height_50"
        android:layout_width="match_parent"/>

</RelativeLayout>